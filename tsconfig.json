{ 
    "compilerOptions":{ 
    "types": [
            "vuetify"
          ],
      "paths": {
            "@/*": [
             "./*"
            ]
           },
       "target":"es6",
       "moduleResolution":"node",
       "module":"commonjs",
       "declaration":false,
       "noLib":false,
       "emitDecoratorMetadata":true,
       "experimentalDecorators":true,
       "sourceMap":true,
       "pretty":true,
       "allowUnreachableCode":true,
       "allowUnusedLabels":true,
       "noImplicitAny":true,
       "noImplicitReturns":false,
       "noImplicitUseStrict":false,
       "outDir":"dist/",
       "baseUrl":"resources/*",
       "listFiles":false,
       "noEmitHelpers":true
    },
    "include":[
       "resources/**/*",
    ],
    "compileOnSave":false
 }
